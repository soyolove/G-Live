# JiLive Agent Configuration

# Agent Settings
JILIVE_AGENT_NAME=jilive-agent
JILIVE_AGENT_DESCRIPTION=Live streaming agent with danmaku processing

# API Settings
JILIVE_API_ENABLED=true
JILIVE_API_PORT=3002
JILIVE_API_HOST=localhost
JILIVE_API_CORS=true
JILIVE_API_PREFIX=/api

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=
REDIS_DB=0
JILIVE_REDIS_PREFIX=jilive:

# Danmaku Processing
JILIVE_BATCH_INTERVAL=5000
JILIVE_MAX_BATCH_SIZE=100
JILIVE_PLATFORMS=bilibili,douyu,huya

# Action Settings
JILIVE_DEFAULT_PRIORITY=normal
JILIVE_EXECUTION_TIMEOUT=30000
JILIVE_RETRY_ATTEMPTS=3

# Logging
JILIVE_LOG_LEVEL=info
JILIVE_VERBOSE=false